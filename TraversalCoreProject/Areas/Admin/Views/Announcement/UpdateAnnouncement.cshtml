@model AnnouncementUpdateDto
@{
    ViewData["Title"] = "UpdateAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">

    <div class="col-xxl">
        <div class="card mb-4">
            <div class="card-header d-flex align-items-center justify-content-between">
                <h5 class="mb-0"< Duyuru Güncelleme Sayfası</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <input type="hidden" asp-for="AnnouncementId" />

                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-name">Duyuru Başlığı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" asp-for="Title" id="basic-default-name" placeholder="Lütfen duyuru başlığını giriniz" />
                            <span asp-validation-for="Title" class="text text-danger"></span>

                        </div>
                    </div>
                    <div class="row mb-3">
                        <label class="col-sm-2 col-form-label" for="basic-default-company">Duyuru İçeriği</label>
                        <div class="col-sm-10">
                            <input type="text"
                                   asp-for="Content"
                                   class="form-control"
                                   id="basic-default-company"
                                   placeholder="Lütfen duyuru içeriğini giriniz" />
                            <span asp-validation-for="Content" class="text text-danger"></span>
                        </div>
                    </div>

                    <div class="row justify-content-end">
                        <div class="col-sm-10">
                            <button type="submit" class="btn btn-primary">Güncelle</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>

