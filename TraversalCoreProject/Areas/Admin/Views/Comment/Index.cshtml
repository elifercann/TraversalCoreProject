@model List<Comment>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<div class="card">
    <h5 class="card-header">Yorum Listesi</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Kullanıcı</th>
                    <th>Rota</th>
                    <th>Tarih</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {


                <tr>
                    @{ sayac = sayac + 1;}
                    <td>@sayac</td>
                    <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>@item.User</strong></td>
                    <td>@item.Destination.City</td>
                    <td>
                        @(((DateTime)item.CommentDate).ToString("dd-MMM-yyyy"))
                    </td>
                    <td><a class="badge bg-label-danger me-1" href="/Comment/DeleteComment/@item.CommentId">Sil</a></td>

                </tr>
                }
            </tbody>
        </table>
    </div>
</div>
