@model IEnumerable<BookingHotelSearchViewModel.Result>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
    double score;
}
<div class="card">
    <h5 class="card-header">Booking Otel Rezervasyon Sayfası</h5>
    <div class="table-responsive text-nowrap">
        <h5>Arama Yapılan Şehir:Paris/Fransa</h5>
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Otel Adı</th>
                    <th>Otel Puanı</th>
                    <th>Otel Değerlendirmesi</th>
                    <th>DEtaylar</th>

                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {


                <tr>
                    @{ count = count + 1;}
                    <td>@count</td>
                    <td>@item.name</td>
                    @{ score = double.Parse(item.reviewScore.ToString()) / 10;}
                    <td>@score</td>
                    @{
                        if (item.reviewScoreWord == "Very good")
                        {
                            <td>Çok İyi</td>
                        }
                        if (item.reviewScoreWord == "Good")
                        {
                            <td>İyi</td>
                        }
                        if (item.reviewScoreWord == "Fabulous")
                        {
                            <td>Harika</td>
                        }
                        if (item.reviewScoreWord == "Pleasant")
                        {
                            <td>Güzel</td>
                        }
                    }
                 
                    <td><a class="badge bg-label-primary me-1" href="#"><i class="bx bx-detail"></i> Detaylar</a></td>


                </tr>
                }
            </tbody>
        </table>
    </div>
</div>

