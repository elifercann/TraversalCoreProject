@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<div class="card">
    <h5 class="card-header">Rehber Listesi</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Görsel</th>
                    <th>Ad Soyad</th>
                    <th>Açıklama</th>
                    <th>Durum</th>
                    <th>İşlemler</th>

                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {


                    <tr>
                        @{ sayac = sayac + 1;}
                        <td>@sayac</td>
                        <td><img src="@item.Image" class="avatar avatar-sm me-3" alt="Image placeholder" /></td>
                        <td><strong>@item.Name</strong></td>


                        <td>
                            @item.Description
                        </td>
                        @if (item.Status == true)
                        {


                            <td>
                                <a class="btn btn-primary" href="/Admin/Guide/ChangeToFalse/@item.GuideId">Pasif Yap</a>

                            </td>
                        }
                        else
                        {
                            <td>
                                <a class="btn btn-warning" href="/Admin/Guide/ChangeToTrue/@item.GuideId">Aktif Yap</a>

                            </td>
                        }

                        <td><a class="badge bg-label-primary me-1" href="/Admin/Guide/EditGuide/@item.GuideId"><i class="bx bx-edit-alt me-1"></i> Güncelle</a></td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<div>

    <br />
    <a class="btn btn-primary" href="/Admin/Guide/AddGuide/">Yeni Rehber Oluştur</a>

</div>
