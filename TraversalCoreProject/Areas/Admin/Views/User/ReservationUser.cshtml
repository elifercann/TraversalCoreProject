@model List<Reservation>
@{
    ViewData["Title"] = "ReservationUser";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sayac = 0;
}

<div class="card">
    <h5 class="card-header">Kullanıcı Geçmiş Rezervasyon Listesi</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Ad Soyad</th>
                    <th>Rota</th>
                    <th>Kişi Sayısı</th>
                    <th>Tarih</th>
                    <th>İşlemler</th>

                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {


                    <tr>
                        @{ sayac = sayac + 1;}
                        <td>@sayac</td>
                        <td><i class="fab fa-angular fa-lg text-danger me-3"></i> <strong>####</strong></td>

                        <td>@item.Destination.City</td>
                        <td> @item.PersonCount</td>
                        <td> @(((DateTime)item.ReservationDate).ToString("dd-MMM-yyyy"))</td>
                        <td><a class="badge bg-label-warning me-1" href="#"><i class="bx bx-edit-alt me-1"></i> Detaylar</a></td>

                    </tr>
                            }
            </tbody>
        </table>
    </div>
</div>
